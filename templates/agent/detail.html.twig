{% extends 'base.html.twig' %}

{% block title %}Edit ticket{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/customerStyle.css') }}">{% endblock %}
{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <section class="example-wrapper">
        <h1>Ticket</h1>
        {#    If there's an error, it will be display here    #}
        <p>{{ error|default('') }}</p>
        {#    Table containing information of the current ticket    #}
        <section class="table">
            <tbody>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="row">Id</th>
                    <th>{{ ticket.id }}</th>
               </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ ticket.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Content</th>
                    <td>{{ ticket.content }}</td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td>{{ ticket.status }}</td>
                </tr>
                <tr>
                    <th scope="row">CreatedDate</th>
                    <td>{{ ticket.createdDate ? ticket.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">UpdatedDate</th>
                    <td>{{ ticket.updatedDate ? ticket.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">IsEscalated</th>
                    <td>{{ ticket.isEscalated ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th scope="row">CloseReason</th>
                    <td>{{ ticket.closeReason }}</td>
                </tr>
                <tr>
                    <th scope="row">Priority</th>
                    <td>{{ ticket.priority }}</td>
                </tr>
                </tbody>
            </table>

