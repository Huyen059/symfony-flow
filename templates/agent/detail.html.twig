    </section>


    {#  All comments of the current tickets  #}
    <section class="example-wrapper">
        <h1>List of comments on this ticket</h1>
        {% for comment in ticket.comments %}
            <div>
                <h3>{{ comment.title }}</h3>
                {% if comment.isPrivate %}
                    <p>This comment is private!</p>
                {% endif %}
                <p>{{ comment.content }}</p>
            </div>
        {% else %}
        <p>No comment yet.</p>
        {% endfor %}
    </section>

    {#  If a ticket is not closed, show the form to add comment and button to close/escalate  #}
    {% if ticket.status != close %}
        <section class="example-wrapper">
            <h1>Add new comment</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Add Comment</button>
            <!--<button type="submit">Add Comment</button>-->
            {{ form_end(form) }}
        </section>
        <section class="example-wrapper">
            <form method="post">
                <input type="hidden" name="closeTicket" value="{{ ticket.id }}">
                <!--<button type="submit">Close this ticket</button>-->
                <button type="submit" class="btn btn-primary">Close this ticket</button>
            </form>
        </section>
        {#  Only first line agent can escalate a ticket      #}
        {% if not agent.isSecondLine %}
            <section class="example-wrapper">
                <form method="post">
                    <input type="hidden" name="escalateTicket" value="{{ ticket.id }}">
                    <button type="submit" class="btn btn-primary">Escalate this ticket</button>
                    <!--<button type="submit">Escalate this ticket</button>-->
                </form>
            </section>
        {% endif %}
    {% endif %}

