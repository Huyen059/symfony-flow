{% extends 'base.html.twig' %}

{% block title %}Customer Comments{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Your Ticket history</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Status</th>
            <th>CreatedDate</th>
            <th>UpdatedDate</th>
            <th>IsEscalated</th>
            <th>CloseReason</th>
            <th>Priority</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.title }}</td>
                <td>{{ ticket.content }}</td>
                <td>{{ ticket.status }}</td>
                <td>{{ ticket.createdDate ? ticket.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ticket.updatedDate ? ticket.updatedDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ticket.isEscalated ? 'Yes' : 'No' }}</td>
                <td>{{ ticket.closeReason }}</td>
                <td>{{ ticket.priority }}</td>
                <td>
                    <a href="{{ path('customer_tickets', {'id': ticket.id}) }}">Message History</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




</div>
{% endblock %}
